{
  "name": "modern-diacritics",
  "version": "1.2.1",
  "description": "A modern way to remove diacritics from strings",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "type": "module",
  "types": "./index.d.ts",
  "repository": "Mitsunee/modern-diacritics.git",
  "author": "Misunee",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "eslint index.js src && mocha",
    "prepare": "simple-git-hooks",
    "publish": "eslint index.js src && mocha && clean-publish --fields scripts"
  },
  "prettier": "@foxkit/internal/prettier",
  "eslintConfig": {
    "extends": "@foxkit"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "keywords": [
    "diacritics",
    "remove",
    "removal",
    "search",
    "string",
    "slugify",
    "slug"
  ],
  "directories": {
    "src": "src"
  },
  "devDependencies": {
    "@foxkit/eslint-config": "^1.0.1",
    "@foxkit/internal": "^2.0.1",
    "clean-publish": "^3.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.2",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1"
  }
}
